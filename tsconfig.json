{
   "compilerOptions": {
      "target": "ES2017",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "plugins": [
         {
            "name": "next"
         }
      ],
      "paths": {
         "core/app/*": ["./src/core/app/*"],
         "entities/*": ["./src/core/entities/*"],
         "features/*": ["./src/core/features/*"],
         "pages/*": ["./src/core/pages/*"],
         "shared/*": ["./src/core/shared/*"],
         "widgets/*": ["./src/core/widgets/*"]
      }
   },
   "include": [
      "src/core/app/types/global.d.ts",
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      ".next/types/**/*.ts"
   ],
   "exclude": ["node_modules"]
}
